generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  email String @unique
  shopName String
  createdAt DateTime @default(now())
  password String 
  avatar String @default("/Avatar/default-user.jpg")
  clients Client[]
  services Service[]
}

model Client{
  id Int @id @default(autoincrement())
  userId Int
  name String
  contactInfo String?
  createdAt DateTime @default(now())
  user User @relation(fields: [userId] , references: [id])
  records DailyRecord[]

  @@index([userId])
}

model Service{
  id Int @id @default(autoincrement())
  userId Int
  serviceName String
  unit String
  pricePerUnit Float
  createdAt DateTime @default(now())
  user User @relation(fields: [userId] , references: [id])
  records DailyRecord[]

  @@index([userId])
}

model DailyRecord{
  id Int @id @default(autoincrement())
  clientId Int
  serviceId Int
  recodeDate DateTime
  units Float
  totalPrice Float
  createdAt DateTime @default(now())
  client Client @relation(fields: [clientId], references: [id])
  service Service @relation(fields: [serviceId] , references: [id])

  @@unique([clientId,serviceId,recodeDate])
  @@index([clientId])
  @@index([serviceId])
}